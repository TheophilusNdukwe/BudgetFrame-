<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BudgetFrame</title>
    <link
      rel="stylesheet"
      href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <header>
      <!-- BudgetFrame header with logout on opposite side -->
      <h1><i class="fa fa-money"></i> BudgetFrame</h1>
      <a href="/logout" class="btn btn-default"
        ><i class="fa fa-sign-out"></i> Logout</a
      >
    </header>

    <div class="container-fluid">
      <div class="row">
        <!-- SIDEBAR -->
        <div class="col-sm-2 side-bar">
          <ul class="nav nav-pills nav-stacked">
            <li class="btn">
              <a href="/dashboard"><i class="fa fa-dashboard"></i> Dashboard</a>
            </li>
            <li class="btn active">
              <a href="/profile"><i class="fa fa-user"></i> Profile</a>
            </li>
          </ul>
        </div>

        <div class="col-sm-10">
          <div class="container">
            <div class="row">
              <div class="col-sm-12">
                <h2 class="text-green">
                  <i class="fa fa-user"></i>
                  <span>Hello, <%= user.local.profileName %></span>
                </h2>
                <hr />
              </div>

              <!-- Profile Information Section -->
              <div class="col-sm-8">
                <div class="profile-section">
                  <h3>Profile Information</h3>
                  <form action="/profile" method="post" class="edit-form">
                    <div class="form-group">
                      <label for="username">Email</label>
                      <div class="input-group">
                        <input
                          type="text"
                          class="form-control"
                          id="email"
                          name="username"
                          value="<%= user.local.email %>"
                          readonly />
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="username">Username</label>
                      <div class="input-group">
                        <input
                          type="text"
                          class="form-control"
                          id="username"
                          name="profileName"
                          value="<%= user.local.username %>" />
                        <span class="input-group-btn">
                          <button
                            class="btn btn-username"
                            type="submit"
                            name="update-profileName"
                            value="profileName">
                            <i class="fa fa-save"></i> Save
                          </button>
                        </span>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="profileName">Profile Name</label>
                      <div class="input-group">
                        <input
                          type="text"
                          class="form-control"
                          id="profileName"
                          name="profileName"
                          value="<%= user.local.profileName %>" />
                        <span class="input-group-btn">
                          <button
                            class="btn btn-profilename"
                            type="submit"
                            name="update-profileName"
                            value="profileName">
                            <i class="fa fa-save"></i> Save
                          </button>
                        </span>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="main.js"></script>
  </body>
</html>
